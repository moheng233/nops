{
  "name": "nops",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": " concurrently --restart-tries -1 -n SERVER,CLIENT 'npm:dev:server' 'npm:dev:client'",
    "dev:client": "vite dev --strictPort --port 3000",
    "dev:server": "node --enable-source-maps --import=tsimp/import --import dynohot/register ./src/server/index.ts",
    "run:server": "node --enable-source-maps --import=tsimp/import ./src/server/index.ts",
    "database": "NODE_OPTIONS='--import=tsimp/import' mikro-orm --config src/server/mikro-orm.config.ts",
    "prepare": "ts-patch install && typia patch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "mikro-orm": {
    "configPaths": [
      "mikro-orm.config.ts"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "ts-patch": "^3.1.2",
    "tsimp": "^2.0.11",
    "typescript": "^5.3.2",
    "vite": "^5.1.3",
    "vite-plugin-solid": "^2.10.1"
  },
  "dependencies": {
    "@trpc/client": "11.0.0-next-beta.289",
    "@trpc/server": "11.0.0-next-beta.289",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "dynohot": "^1.1.1",
    "mongoz": "^0.0.1",
    "reflect-metadata": "^0.2.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "solid-js": "^1.8.15",
    "sqlite3": "^5.1.7",
    "std-env": "^3.7.0",
    "typeorm": "^0.3.20",
    "typia": "^5.4.10"
  }
}