{
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "utility-types"
        ],
        "baseUrl": "src",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "noEmit": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ],
    "references": []
}
